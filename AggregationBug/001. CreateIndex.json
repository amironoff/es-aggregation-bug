PUT posts
{
    "settings": {

        "mappings": {
            "feed-post": {
                "properties": {
                    "message": {
                        "properties": {
                            "original": {
                                "type": "string",
                                "index_options": "offsets",
                                "term_vector": "with_positions_offsets"
                            }

                        }
                    },
                    "group": {
                        "include_in_all": false,
                        "properties": {
                            "categories": { "type": "string", "index": "not_analyzed" },
                            "name": { "type": "string", "index": "not_analyzed" },
                            "privacy": { "type": "string", "index": "not_analyzed" }
                        }
                    }
                }
            }
        }
    }
}